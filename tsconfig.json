{
  "compilerOptions": {
    // Diretórios
    "rootDir": "./src",
    "outDir": "./build",

    // Ambiente
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2021",
    "lib": ["ESNext"],
    "types": ["node"],

    // Saída
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Regras de checagem
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    // Melhor compatibilidade com imports/exports
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    // Se quiser manter:
    // "verbatimModuleSyntax": true,
    // "isolatedModules": true,
    // "moduleDetection": "force"
  }
}
